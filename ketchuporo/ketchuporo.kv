#:kivy 1.8.0

<KetchuporoLayout>:
    orientation: "vertical"

<WelcomeScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: 70
            text: "no elo"
        Button:
            text: "Start!"
            on_release: root.start()

<TimerScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            font_size: 70
            text: root.model.timer_label
        Label:
            font_size: 70
            text: str(root.model.pomodoros_counter)
