#:kivy 1.8.0

# Lanel mixins
<BaseLabel@Label>:
    text_size: self.width, None
    halign: "center"


<SmallLabel@BaseLabel>:
    font_size: self.height/4


<MediumLabel@BaseLabel>:
    font_size: self.height/3


<BigLabel@BaseLabel>:
    font_size: self.height/2


# Button mixins
<BaseButton@Button>
    text_size: self.width, None
    halign: "center"
    color: .8, .2, .247, 1
    background_color: 1, 1, 1, 1
    background_normal: ""

<SmallButton@BaseButton>
    font_size: self.height/5

<BigButton@BaseButton>
    font_size: self.height/3

<BaseLayout@BoxLayout>
    spacing: 10
    padding: 10
    canvas:
        Color:
            rgba: .8, .2, .247, 1
        Rectangle:
            pos: self.pos
            size: self.size


<WelcomeScreen>:
    BaseLayout:
        orientation: "vertical"
        MediumLabel:
            text: "Ketchuporo Timer"

        SmallButton:
            text: "Start!"
            on_release:
                root.reset_pomodori_counter()
                root.manager.current = 'timer'
                root.manager.transition.direction = 'left'
        SmallButton:
            text: "Settings"
            on_release:
                root.manager.current = 'settings'
                root.manager.transition.direction = 'left'
        SmallButton:
            text: "Quit"
            on_press: root.exit()


<TimerScreen>:
    on_pre_enter:
        root.timer_pre_start()
        root.update_break_button_label()
    on_enter: root.timer_start()
    BaseLayout:
        orientation: "vertical"
        SmallLabel:
            text: "Pomodoro {}".format(root.model.pomodori_counter)
        BigLabel:
            text: root.model.timer_label

        BoxLayout:
            spacing: 10
            orientation: "horizontal"
            SmallButton:
                text: "Back to menu"
                on_release:
                    root.timer_unschedule()
                    root.manager.current = 'welcome'
                    root.manager.transition.direction = 'right'
            SmallButton:
                text: root.start_break_label.label
                on_release:
                    root.timer_unschedule()
                    root.manager.current = 'break'
                    root.manager.transition.direction = 'left'


<PomodorosOverScreen>:
    on_pre_enter:
        root.timer_pre_start()
        root.update_button_label()
    on_enter: root.timer_start()
    BaseLayout:
        orientation: "vertical"
        SmallLabel:
            text: "Time's Up!"
        BigLabel:
            text: "- {}".format(root.model.timer_label)

        BoxLayout:
            spacing: 10
            orientation: "horizontal"
            SmallButton:
                text: "Back to menu"
                on_release:
                    root.timer_unschedule()
                    root.manager.current = 'welcome'
                    root.manager.transition.direction = 'right'
            SmallButton:
                text: root.button_label.label
                on_release:
                    root.timer_unschedule()
                    root.manager.current = 'break'
                    root.manager.transition.direction = 'left'


<BreakScreen>:
    on_pre_enter:
        root.timer_pre_start()
        root.update_break_label()
    on_enter: root.timer_start()
    BaseLayout:
        orientation: "vertical"
        SmallLabel:
            text: root.break_label.label
        BigLabel:
            text: root.model.timer_label

        BoxLayout:
            spacing: 10
            orientation: "horizontal"
            SmallButton:
                text: "Back to menu"
                on_release:
                    root.timer_unschedule()
                    root.manager.current = 'welcome'
                    root.manager.transition.direction = 'right'
            SmallButton:
                text: "Start pomodoro"
                on_release:
                    root.timer_unschedule()
                    root.manager.current = 'timer'
                    root.manager.transition.direction = 'left'


<BreaksOverScreen>:
    on_pre_enter: root.timer_pre_start()
    on_enter: root.timer_start()
    BaseLayout:
        orientation: "vertical"
        SmallLabel:
            text: "Break is over!"
        BigLabel:
            text: "- {}".format(root.model.timer_label)

        BoxLayout:
            spacing: 10
            orientation: "horizontal"
            SmallButton:
                text: "Back to menu"
                on_release:
                    root.timer_unschedule()
                    root.manager.current = 'welcome'
                    root.manager.transition.direction = 'right'
            SmallButton:
                text: "Start pomodoro"
                on_release:
                    root.timer_unschedule()
                    root.manager.current = 'timer'
                    root.manager.transition.direction = 'left'


<SettingsScreen>:
    BaseLayout:
        id: layout
        orientation: "vertical"

        MediumLabel:
            text: "Pomodoro duration: {} min".format(root.model.pomodoro_duration)
        Slider:
            id: pomodoro_duration
            value: 25
            min: 15
            max: 60
            step: 1
            on_value: root.set_pomodoro_duration(*args)

        MediumLabel:
            text: "Short break duration: {} min".format(root.model.short_break_duration)
        Slider:
            id: short_break_duration
            value: 5
            min: 1
            max: 15
            step: 1
            on_value: root.set_short_break_duration(*args)

        MediumLabel:
            text: "Long break duration: {} min".format(root.model.long_break_duration)
        Slider:
            id: long_break_duration
            value: 15
            min: 5
            max: 30
            step: 1
            on_value: root.set_long_break_duration(*args)

        MediumLabel:
            text: "Long break after {} pomodori".format(root.model.pomodori_for_cycle)
            padding: [0, 0]
        Slider:
            id: pomodori_for_cycle
            value: 4
            min: 2
            max: 10
            step: 1
            on_value: root.set_pomodori_for_cycle(*args)

        BoxLayout:
            spacing: 10
            orientation: "horizontal"
            MediumLabel:
                text: "Bell after pomodoro"
                halign: "right"
            CheckBox:
                id: bell_after_pomodoro
                active: True
                on_active: root.set_bell_after_pomodoro(*args)

        BoxLayout:
            spacing: 10
            orientation: "horizontal"
            MediumLabel:
                text: "Bell after break"
                halign: "right"
            CheckBox:
                id: bell_after_break
                active: True
                on_active: root.set_bell_after_break(*args)

        BoxLayout:
            spacing: 10
            orientation: "horizontal"
            BigButton:
                text: "Reset to defaults"
                on_release: root.reset_settings()
            BigButton:
                text: "Save"
                on_release:
                    root.manager.current = 'welcome'
                    root.manager.transition.direction = 'right'
